                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
                    style="@style/ListTextView"
                    android:text="@string/title_home" />

                <TextView
