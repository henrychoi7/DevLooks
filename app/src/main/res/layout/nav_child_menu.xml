<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <ImageView
        android:id="@+id/child_image_view"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="50dp"
        android:contentDescription="@string/nav_child_menu_icon"
        tools:src="@drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/child_text_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@id/child_image_view"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:text="@string/nav_child_menu_icon" />
</RelativeLayout>